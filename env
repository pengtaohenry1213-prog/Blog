# JWT 配置
JWT_SECRET=your_jwt_secret_key_change_in_production
JWT_EXPIRES_IN=7d

# CORS 配置
CORS_ORIGIN=http://localhost:5173

# Docker 环境变量（用于 docker-compose.yml）
BACKEND_PORT=3001
