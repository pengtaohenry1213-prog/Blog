# 后端环境配置
NODE_ENV=development
PORT=3001

# 数据库配置
DB_HOST=localhost
DB_PORT=3306
DB_NAME=blog_db
DB_USER=blog_user
DB_PASSWORD=root123

# Redis 配置
REDIS_HOST=localhost
REDIS_PORT=6379
